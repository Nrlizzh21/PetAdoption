@model PetAdoptionAPI.Models.Adoptions

@{
    ViewData["Title"] = "Edit Adoption Status";

    // Prepare the status options for the dropdown
    var statusList = new List<SelectListItem>
    {
        new SelectListItem { Text = "Approved", Value = "Approved" },
        new SelectListItem { Text = "Rejected", Value = "Rejected" }
    };
}

<link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@300&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-sm border-0" style="background-color: #FFF9E6; border-radius: 12px; max-width: 600px; margin: 0 auto;">
        <div class="card-body">
            <h2 class="mb-4 text-center"
                style="font-family: 'Crimson Pro', serif;
                       font-weight: 300;
                       color: #8b4513;
                       text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);">
                Edit Adoption Status
            </h2>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="AdoptionID" />

                <div class="form-group mb-3">
                    <label asp-for="Status" class="form-label" style="color: #5c4327;">Status</label>
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #decfa8; color: #5c4327;">
                            <i class="bi bi-check-circle"></i>
                        </span>
                        @Html.DropDownListFor(m => m.Status, new SelectList(statusList, "Value", "Text", Model.Status),
                                 "-- Select Status --",
                                 new { @class = "form-control", style = "background-color: #f0e5d8; color: #5c4327; box-shadow: 1px 1px 5px rgba(0,0,0,0.1);" })
                    </div>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary" style="background-color: #f0e5d8; color: #5c4327; box-shadow: 2px 2px 5px rgba(0,0,0,0.2);">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-secondary ms-3" style="background-color: #f0e5d8; color: #5c4327; box-shadow: 2px 2px 5px rgba(0,0,0,0.2);">
                        <i class="bi bi-check-circle"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div><br />
</div>

@section Scripts {
    <script>
        // Check if TempData contains a success message and display it as an alert
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    alert('@TempData["SuccessMessage"]');
            </text>
        }
    </script>
}