@model PetAdoptionAPI.Models.Pets

@{
    ViewData["Title"] = "Create Pet";
}

<link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@300&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-sm border-0" style="background-color: #FFF9E6; border-radius: 12px; max-width: 600px; margin: 0 auto;">
        <div class="card-body">
            <h2 class="mb-4 text-center"
                style="font-family: 'Crimson Pro', serif;
                       font-weight: 300;
                       color: #8b4513;
                       text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);">
                New Pet
            </h2>

            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label" style="color: #5c4327;">Pet Name</label>
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #decfa8; color: #5c4327;"><i class="bi bi-paw-fill"></i></span>
                        <input asp-for="Name" class="form-control" placeholder="Enter pet name"
                               style="background-color: #f0e5d8; color: #5c4327; box-shadow: 1px 1px 5px rgba(0,0,0,0.1);" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Age" class="form-label" style="color: #5c4327;">Age</label>
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #decfa8; color: #5c4327;"><i class="bi bi-calendar-fill"></i></span>
                        <input asp-for="Age" class="form-control" placeholder="Enter pet age"
                               style="background-color: #f0e5d8; color: #5c4327; box-shadow: 1px 1px 5px rgba(0,0,0,0.1);" />
                    </div>
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Breed" class="form-label" style="color: #5c4327;">Breed</label>
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #decfa8; color: #5c4327;"><i class="bi bi-shield-fill-check"></i></span>
                        <input asp-for="Breed" class="form-control" placeholder="Enter pet breed"
                               style="background-color: #f0e5d8; color: #5c4327; box-shadow: 1px 1px 5px rgba(0,0,0,0.1);" />
                    </div>
                    <span asp-validation-for="Breed" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AdoptionStatus" class="form-label" style="color: #5c4327;">Adoption Status</label>
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #decfa8; color: #5c4327;"><i class="bi bi-info-circle"></i></span>
                        <input asp-for="AdoptionStatus" class="form-control" placeholder="Enter status (Eg: 'Adopted' or 'Available'"
                               style="background-color: #f0e5d8; color: #5c4327; box-shadow: 1px 1px 5px rgba(0,0,0,0.1);" />
                    </div>
                    <span asp-validation-for="AdoptionStatus" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary" style="background-color: #f0e5d8; color: #5c4327; box-shadow: 2px 2px 5px rgba(0,0,0,0.2);">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-secondary ms-3" style="background-color: #f0e5d8; color: #5c4327; box-shadow: 2px 2px 5px rgba(0,0,0,0.2);">
                        <i class="bi bi-check-circle"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
</br>

@section Scripts {
    <script>
        // Enable Bootstrap Tooltips for extra interactivity (optional)
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
    <script>
        // Check if TempData contains a success message and display it as an alert
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                        alert('@TempData["SuccessMessage"]');
            </text>
        }
    </script>
}
